<!doctype html>
<html lang="en" >
<head>
    <title>سیستم فروش همکار</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    @*<link href="~/css/bootstrap-rtl.css" rel="stylesheet" />*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="active ">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="p-4">
                <h1><a class="logo">حامد یدک</a></h1>
                <ul class="list-unstyled components mb-5">

                    <li class="active"><span class="fa fa-user mr-3"></span>@Html.ActionLink("لیست کاربران", "UserList", "User")</li>
                    <li class="active"><span class="fa fa-level-up mr-3"></span>@Html.ActionLink("تایید کاربران", "ConfirmUsers", "User")</li>
                    <li class="active"><span class="fa fa-list mr-3"></span>@Html.ActionLink("لیست سفارشات", "OrderList", "Order")</li>
                    <li class="active"><span class="fa fa-list mr-3"></span>@Html.ActionLink("ثبت سفارش", "CreateOrder", "Order")</li>
                    <li class="active"><span class="fa fa-list mr-3"></span>@Html.ActionLink("پیگیری سفارش", "OrderTracking", "Order")</li>
                    <li class="active"><span class="fa fa-sign-out mr-3"></span>@Html.ActionLink("خروج", "Logout", "User")</li>
                    <li class="active"><span class="fa fa-sign-out mr-3"></span><a href="#" onclick="ConfirmExit()">خروج</a></li>

                </ul>

                

                <div class="footer">

                </div>

            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            @RenderBody()
        </div>
    </div>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script>
        function ConfirmExit() {
            debugger;
            if (confirm('آیا از خروج اطمینان دارید؟')) {
                $.ajax({
                    type: "GET",
                    url: "/User/LogOut",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",                   
                });
            }
        }
    </script>
</body>
</html>